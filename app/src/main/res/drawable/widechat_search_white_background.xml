<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="#015274" />
            <corners android:radius="10dp"/>
        </shape>
        <padding android:left="0dp"
            android:bottom="4dp"
            android:right="0dp"
            android:top="4dp"/>
    </item>

    <item android:right="2dp" android:left="0dp" android:bottom="3dp">
        <shape>
            <solid android:color="@android:color/white"/>
            <corners android:radius="10dp"/>
        </shape>

        <padding android:left="0dp"
            android:bottom="4dp"
            android:right="0dp"
            android:top="4dp"/>
    </item>

</layer-list>